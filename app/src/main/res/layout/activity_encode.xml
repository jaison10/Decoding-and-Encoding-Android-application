<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jaison.ddecoder.encode">

    <EditText
        android:id="@+id/encode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="enter the text"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="137dp" />

    <TextView
        android:id="@+id/answer_textview"
        android:layout_width="92dp"
        android:layout_height="49dp"
        android:layout_alignEnd="@+id/encode"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="132dp"
        android:layout_marginEnd="52dp"
        android:text="Result"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="326dp" />

    <Button
        android:id="@+id/convert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/answer_textview"
        android:layout_alignEnd="@+id/answer_textview"
        android:layout_marginBottom="84dp"
        android:layout_marginEnd="41dp"
        android:text="encode now"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="231dp" />
</RelativeLayout>
